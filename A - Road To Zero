public class A14
{
	
	public static void main(String[] args)
	{
	Scanner s=new Scanner(System.in);
	int t=s.nextInt();
	while(t>0)
	{
	long x=s.nextLong();
	long y=s.nextLong();
	long a=s.nextLong();
	long b=s.nextLong();
	long ans=0;
	if(x==0&&y==0)
	System.out.println(ans);
	else
	{
	
	if(2*a<=b)
	ans=a*(Math.abs(0-x)+Math.abs(0-y));
		
	else
	ans=Math.abs(x-y)*a+Math.min(x,y)*b;
	
	
	
	System.out.println(ans);
	}
	t--;
	}
	}
}
