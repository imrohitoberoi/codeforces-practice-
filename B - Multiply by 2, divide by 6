B - Multiply by 2, divide by 6


import java.util.*;
public class Main {
    public static void main(String args[]) {
    Scanner sc=  new Scanner(System.in);
    int t = sc.nextInt();
    while(t-->0){
        int n =  sc.nextInt();
      
 int count =0;
 while(n>1){

 
 if(n%6==0){
     n/=6;
     count++;
 }else {
     n*=2;
     count++;
 }}
 if(count>=0&&n==1){
     System.out.println(count);
 }else{
     System.out.println("-1");
 }

    
   

    }}}
    
