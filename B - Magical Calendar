import java.util.*;
 public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        while(t-->0){
            long n =sc.nextInt();
            long r = sc.nextInt();
if(n>r){
    System.out.println((r*(r+1))/2);
}else{
    System.out.println(n*(n-1)/2+1);
}
        }
    }
}
