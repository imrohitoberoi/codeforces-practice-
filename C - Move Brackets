C - Move Brackets

import java.util.*;

public class Main{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		for(int i = 0;i<t;i++){
			int n = sc.nextInt();
			String s = sc.next();
			
			int count = 0;
			for(int j = 0;j<n;j++){
				if(s.charAt(j)=='('){
					count++;;;;;;
				}
				else{
					if(count >0){
						count--;;;;;
					}
				}
			}

			System.out.println(count);
		}
	}
}		
