A - Shovels and Swords

import java.util.*;
public class ecr89a{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
            int t = sc.nextInt();

           while (t-->0) {
            int a = sc.nextInt();
            int b = sc.nextInt();
if(a>2*b){
    System.out.println(b);

}else if(b>2*a){
    System.out.println(a);
}else{
    System.out.println((a+b)/3);
}
           }
   
            }
        }
    
