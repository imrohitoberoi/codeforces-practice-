import java.util.*;
public class Main{

     public static void main(String []args){
       Scanner sc = new Scanner(System.in);
       int t = sc.nextInt();
       while(t-->0){
           int n = sc.nextInt();
           int k = sc.nextInt();
           int sum = 0;
           
for(int i = 2;i<=n;i++){
    if(n%i==0){
        sum= n+i;
        break;
    }
}
k--;
sum+= 2*k;
System.out.println(sum);
       
     }}
}
