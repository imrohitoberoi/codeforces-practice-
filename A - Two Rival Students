
import java.util.Arrays;
import java.util.Scanner;


public class NewClass {
    


  public static void main(String args[]) {
        Scanner sc=new Scanner(System.in);
        int t=sc.nextInt();
        for(int i=0;i<t;i++){
            int n=sc.nextInt();
            int x=sc.nextInt();
            int a=sc.nextInt();
            int b=sc.nextInt();
            System.out.println(Math.min(n-1,Math.max(a,b)+x-Math.min(a,b)));
        }
    }
   }
        

